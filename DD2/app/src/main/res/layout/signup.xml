<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textview_conpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <EditText
        android:id="@+id/editTextTextPersonName9"
        android:layout_width="182"
        android:layout_height="23"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/textView_name4"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName8" />

    <EditText
        android:id="@+id/editTextTextPersonName8"
        android:layout_width="182"
        android:layout_height="23"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/textView_name3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7" />

    <TextView
        android:id="@+id/textView_name4"
        android:layout_width="182dp"
        android:layout_height="21dp"
        android:layout_marginTop="17dp"
        android:text="Confirm Password:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_name3" />

    <TextView
        android:id="@+id/textView_name3"
        android:layout_width="182"
        android:layout_height="19dp"
        android:layout_marginTop="16dp"
        android:text="Password:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_name2" />

    <TextView
        android:id="@+id/textView_name2"
        android:layout_width="182"
        android:layout_height="21dp"
        android:layout_marginTop="13dp"
        android:text="E-mail:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomain_2" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="52dp"
        android:onClick="Signup"
        android:text="Submit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName9" />

    <TextView
        android:id="@+id/plaintext_signup"
        android:layout_width="414dp"
        android:layout_height="41dp"
        android:layout_marginTop="7dp"
        android:background="#FBA97B"
        android:text="Sign-up"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="182"
        android:layout_height="23"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView_name"
        app:layout_constraintTop_toBottomOf="@+id/plaintext_signup" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="182"
        android:layout_height="23dp"
        android:layout_marginTop="50dp"
        android:text="Name:"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plaintext_signup" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="182"
        android:layout_height="23"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/textView_name2"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName6" />

</androidx.constraintlayout.widget.ConstraintLayout>